<div class="page-header"><h1><%= __("Contrôleurs") %></h1></div>

<p class="important"><%= __("Cette page permet de gérer les différents contrôleurs supportés par de recalbox.") %></p>

<form method="post" action="/controllers" class="form-horizontal">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= __("Contrôleur DB9") %></h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="db9-enabled" class="col-md-4 control-label"><%= __("Support des contrôleurs DB9") %></label>
        <div class="col-md-6">
          <input type="hidden" name="controllers.db9.enabled" value="0">
          <input type="checkbox" name="controllers.db9.enabled" value="1" id="db9-enabled" data-switch<% if (1 == db9.enabled) { %> checked="checked"<% } %>>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="db9-args" class="col-md-4 control-label"><%= __("Paramètres") %></label>
        <div class="col-md-6">
          <input type="text" name="controllers.db9.args" value="<%= db9.args %>" id="db9-args">
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= __("Contrôleur Gamecon") %></h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="gamecon-enabled" class="col-md-4 control-label"><%= __("Support des contrôleurs Gamecon") %></label>
        <div class="col-md-6">
          <input type="hidden" name="controllers.gamecon.enabled" value="0">
          <input type="checkbox" name="controllers.gamecon.enabled" value="1" id="gamecon-enabled" data-switch<% if (1 == gamecon.enabled) { %> checked="checked"<% } %>>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="gamecon-args" class="col-md-4 control-label"><%= __("Paramètres") %></label>
        <div class="col-md-6">
          <input type="text" name="controllers.gamecon.args" value="<%= gamecon.args %>" id="gamecon-args">
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= __("Contrôleur GPIO") %></h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="gpio-enabled" class="col-md-4 control-label"><%= __("Support des contrôleurs GPIO") %></label>
        <div class="col-md-6">
          <input type="hidden" name="controllers.gpio.enabled" value="0">
          <input type="checkbox" name="controllers.gpio.enabled" value="1" id="gpio-enabled" data-switch<% if (1 == gpio.enabled) { %> checked="checked"<% } %>>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="gpio-args" class="col-md-4 control-label"><%= __("Paramètres") %></label>
        <div class="col-md-6">
          <input type="text" name="controllers.gpio.args" value="<%= gpio.args %>" id="gpio-args">
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= __("Contrôleur PS3") %></h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="ps3-enabled" class="col-md-4 control-label"><%= __("Support des contrôleurs PS3") %></label>
        <div class="col-md-6">
          <input type="hidden" name="controllers.ps3.enabled" value="0">
          <input type="checkbox" name="controllers.ps3.enabled" value="1" id="ps3-enabled" data-switch<% if (1 == ps3.enabled) { %> checked="checked"<% } %>>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="ps3-driver" class="col-md-4 control-label"><%= __("Driver à utiliser") %></label>
        <div class="col-md-6">
          <select name="controllers.ps3.driver" id="ps3-driver" class="selectpicker show-tick form-control" data-select data-live-search="true">
          <% ps3drivers.forEach(function (item) { %>
            <option value="<%= item.key %>"<% if (ps3.driver == item.key) { %> selected="selected"<% } %>>
              <%= item.value %>
            </option>
          <% }); %>
          </select>
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= __("Contrôleur XBOX") %></h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="xboxdrv-enabled" class="col-md-4 control-label"><%= __("Support des contrôleurs XBOX") %></label>
        <div class="col-md-6">
          <input type="hidden" name="controllers.xboxdrv.enabled" value="0">
          <input type="checkbox" name="controllers.xboxdrv.enabled" value="1" id="xboxdrv-enabled" data-switch<% if (1 == xboxdrv.enabled) { %> checked="checked"<% } %>>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="xboxdrv-nbcontrols" class="col-md-4 control-label"><%= __("Nombre des contrôleurs") %></label>
        <div class="col-md-6">
          <input type="text" name="controllers.xboxdrv.nbcontrols" value="<%= xboxdrv.nbcontrols %>" class="slider" data-slider data-slider-min="0" data-slider-max="4" data-slider-step="1" data-slider-value="<%= xboxdrv.nbcontrols %>" />
        </div>
      </div>
    </div>
  </div>

  <p>
    <a href="/controllers" class="btn btn-danger"><%= __("Annuler") %></a>
    <button type="submit" class="btn btn-success"><%= __("Enregistrer") %></button>
  </p>
</form>
