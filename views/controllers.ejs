<h1>Contrôleurs</h1>

<p class="important">Cette page permet de gérer les différents contrôleurs supportés par de recalbox.</p>

<form method="post" action="/controllers" class="form-horizontal">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Contrôleur DB9</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="db9-enabled" class="col-md-4 control-label">Support des contrôleurs DB9</label>
        <div class="col-md-6">
          <input type="hidden" name="db9[enabled]" value="0">
          <input type="checkbox" name="db9[enabled]" value="1" id="db9-enabled" data-switch<% if (1 == curDb9.enabled) { %> checked="checked"<% } %>>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="db9-args" class="col-md-4 control-label">Paramètres</label>
        <div class="col-md-6">
          <input type="text" name="db9[args]" value="<%= curDb9.args %>" id="db9-args">
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Contrôleur Gamecon</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="gamecon-enabled" class="col-md-4 control-label">Support des contrôleurs Gamecon</label>
        <div class="col-md-6">
          <input type="hidden" name="gamecon[enabled]" value="0">
          <input type="checkbox" name="gamecon[enabled]" value="1" id="gamecon-enabled" data-switch<% if (1 == curGamecon.enabled) { %> checked="checked"<% } %>>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="gamecon-args" class="col-md-4 control-label">Paramètres</label>
        <div class="col-md-6">
          <input type="text" name="gamecon[args]" value="<%= curGamecon.args %>" id="gamecon-args">
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Contrôleur GPIO</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="gpio-enabled" class="col-md-4 control-label">Support des contrôleurs GPIO</label>
        <div class="col-md-6">
          <input type="hidden" name="gpio[enabled]" value="0">
          <input type="checkbox" name="gpio[enabled]" value="1" id="gpio-enabled" data-switch<% if (1 == curGpio.enabled) { %> checked="checked"<% } %>>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="gpio-args" class="col-md-4 control-label">Paramètres</label>
        <div class="col-md-6">
          <input type="text" name="gpio[args]" value="<%= curGpio.args %>" id="gpio-args">
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Contrôleur PS3</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="ps3-enabled" class="col-md-4 control-label">Support des contrôleurs PS3</label>
        <div class="col-md-6">
          <input type="hidden" name="ps3[enabled]" value="0">
          <input type="checkbox" name="ps3[enabled]" value="1" id="ps3-enabled" data-switch<% if (1 == curPs3.enabled) { %> checked="checked"<% } %>>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="ps3-driver" class="col-md-4 control-label">Driver à utiliser</label>
        <div class="col-md-6">
          <select name="ps3[driver]" id="ps3-driver" class="selectpicker show-tick form-control" data-select data-live-search="true">
          <% ps3drivers.forEach(function (item) { %>
            <option value="<%= item.key %>"<% if (curPs3.driver == item.key) { %> selected="selected"<% } %>>
              <%= item.value %>
            </option>
          <% }); %>
          </select>
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Contrôleur XBOX</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="xboxdrv-enabled" class="col-md-4 control-label">Support des contrôleurs XBOX</label>
        <div class="col-md-6">
          <input type="hidden" name="xboxdrv[enabled]" value="0">
          <input type="checkbox" name="xboxdrv[enabled]" value="1" id="xboxdrv-enabled" data-switch<% if (1 == curXboxdrv.enabled) { %> checked="checked"<% } %>>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="xboxdrv-nbcontrols" class="col-md-4 control-label">Nombre des contrôleurs</label>
        <div class="col-md-6">
          <input type="text" name="xboxdrv[nbcontrols]" value="<%= curXboxdrv.nbcontrols %>" class="slider" data-slider data-slider-min="0" data-slider-max="4" data-slider-step="1" data-slider-value="<%= curXboxdrv.nbcontrols %>" />
        </div>
      </div>
    </div>
  </div>

  <p>
    <a href="/controllers" class="btn btn-danger">Annuler</a>
    <button type="submit" class="btn btn-success">Enregistrer</button>
  </p>
</form>
