            <li<% if ('systems' == activePage) { %> class="active"<% } %>><a href="/systems"><span class="glyphicon glyphicon-hdd" aria-hidden="true"></span> <%= __("Systèmes") %></a></li>
            <li<% if ('configuration' == activePage) { %> class="active"<% } %>><a href="/configuration"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> <%= __("Configuration") %></a></li>
            <li<% if ('roms' == activePage) { %> class="active"<% } %>><a href="/roms"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> <%= __("ROMs") %></a></li>
            <li<% if ('logs' == activePage) { %> class="active"<% } %>><a href="/logs"><span class="glyphicon glyphicon-file" aria-hidden="true"></span> <%= __("Logs") %></a></li>
            <li<% if ('recalbox-conf' == activePage) { %> class="active"<% } %>><a href="/recalbox-conf"><span class="glyphicon glyphicon-file" aria-hidden="true"></span> recalbox.conf</a></li>
            <li<% if ('help' == activePage) { %> class="active"<% } %>><a href="/help"><span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span> <%= __("Dépannage") %></a></li>
          </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <% if (flash.success) { %>
        <div class="alert alert-success alert-dismissible fade in" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
          <%= flash.success %>
        </div>
        <% } %>

          <%- body %>
        </div>
      </div>
    </div>

    <script src="/js/dependencies/jquery.min.js"></script>
    <script src="/js/dependencies/jquery.matchHeight-min.js"></script>
    <script src="/js/dependencies/bootstrap.min.js"></script>
    <script src="/js/dependencies/bootstrap-select.min.js"></script>
    <script src="/js/dependencies/bootstrap-switch.min.js"></script>
    <script src="/js/dependencies/bootstrap-slider.min.js"></script>
    <script src="/js/dependencies/jquery.rateyo.min.js"></script>
    <script src="/js/dependencies/dropzone.min.js"></script>
    <script>Dropzone.autoDiscover = false;</script>
    <script src="/js/app.js"></script>
  </body>
</html>
