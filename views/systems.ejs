<h1>Système</h1>

<p class="important">Cette page permet de gérer les différents réglages système de recalbox.</p>

<form method="post" action="/systems" class="form-horizontal">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Ratio de l'écran</h3>
    </div>
    <div class="panel-body">
      <select name="ratio" id="locale" class="selectpicker show-tick form-control" data-select data-live-search="true">
      <% ratio.forEach(function (item) { %>
        <option value="<%= item.key %>"<% if (systems.ratio == item.key) { %> selected="selected"<% } %>>
          <%= item.value %>
        </option>
      <% }); %>
      </select>
    </div>
  </div>
